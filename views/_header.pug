header.header
    nav.nav.nav--tours
        a.nav__el(href='/') All tours
    div.header__logo
        img(src='/img/logo-white.png' alt='Nature Tours logo')
    nav.nav.nav--user

        if user
            a.nav__el.nav__el--logout Logout
            a.nav__el(href='/account')
                img.nav__user-img(src=`/img/users/${user.image}` alt='User image')
                span= user.name.split(' ')[0]
        else
            a.nav__el(href='/login') Log in
            a.nav__el.nav__el--cta(href='#') Sign up